<idea-plugin>
    <id>net.rentalhost.idea.laravelInsight</id>
    <name>Laravel Insight</name>
    <version>0.1.1</version>
    <idea-version since-build="145.0"/>

    <vendor email="david.rodrigues@rentalhost.net" url="https://rentalhost.net/">Rentalhost.net</vendor>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>

    <description><![CDATA[
        <strong>Laravel Insight</strong> is a very helpful PhpStorm IDE plugin that
        introduces a lot of features when you are working with Laravel Framework.
    ]]></description>

    <change-notes><![CDATA[
        Initial release.
    ]]></change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor language="PHP" implementation="net.rentalhost.idea.laravelInsight.scope.ScopeReferenceContribuitor"/>
        <psi.referenceProvider language="PHP" providerClass="net.rentalhost.idea.laravelInsight.scope.ScopeReferenceProvider"/>

        <localInspection language="PHP"
                         groupPath="PHP,Laravel Insight"
                         groupName="Annotation"
                         displayName="Columns need to be annotated"
                         enabledByDefault="true"
                         level="WEAK WARNING"
                         shortName="ColumnWithoutAnnotationInspection"
                         implementationClass="net.rentalhost.idea.laravelInsight.annotation.ColumnWithoutAnnotationInspection"/>
    </extensions>
</idea-plugin>
